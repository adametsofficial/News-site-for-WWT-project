<section class="site-section py-lg">
  <section class="container">

    <div class="row blog-entries blog-entries-center">
      <div class="col-md-12 col-lg-8 main-content">
        <h1 class="mb-4">{{title}}</h1>
        <div class="post-meta">
          <span class="category">{{category}}</span>
          <span class="mr-2">{{date}} </span> &bullet;
          <span class="ml-2"><span class="fa fa-comments"></span> {{comments.length}}</span>
          <span class="ml-2"><span class="fa fa-eye"></span> {{views}}</span>
        </div>
        <div class="post-content-body">
          {{content}}
        </div>
      </div>
    </div>

    <div class="pt-5">
      <h3 class="mb-5">{{comments.length}} Comments</h3>
      <ul class="comment-list">

        {{#if comments}}

        {{#each comments}}


        <li class="comment">
          <div class="comment-body">
            <div class="helComment"><b>
                <h3>{{name}}</h3>
              </b>
              <div class="helComment-hash">|</div>
              <div class="meta">{{date}}</div>
            </div>
            <p>{{message}}</p>
          </div>
        </li>


        {{/each}}

        {{else}}
        <p>No comments yet. <b>Be the first!</b> </p>
        {{/if}}



      </ul>

      <div class="comment-form-wrap pt-5">
        <h3 class="mb-5">Leave a comment</h3>
        <form action="/news/comments?postid={{id}}" class="p-5 bg-light" method="POST">
          <div class="form-group">
            <label for="name">Name *</label>
            <input type="text" class="form-control" name="name" id="name">
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea name="message" id="message" cols="30" rows="10" class="form-control"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" value="Post Comment" class="btn btn-primary">
          </div>

        </form>
      </div>
    </div>

    </div>
    </div>
    </div>
  </section>